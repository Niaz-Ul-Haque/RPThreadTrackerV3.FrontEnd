{
	"name": "rpthreadtrackerv3.frontend",
	"version": "1.0.0",
	"description": "RPThreadTracker - RP and Collaborative Writing Management Tool",
	"author": "Rosalind Wills <rosalind@blackjack-software.com>",
	"url": "https://www.rpthreadtracker.com",
	"copyright": "Copyright 2018 Blackjack Software",
	"license": "GPL",
	"private": true,
	"homepage": "https://www.rpthreadtracker.com",
	"devDependencies": {
		"@babel/core": "^7.1.6",
		"babel-cli": "^6.26.0",
		"babel-eslint": "^10.0.1",
		"babel-jest": "^23.6.0",
		"babel-loader": "^8.0.4",
		"babel-plugin-transform-object-rest-spread": "^6.26.0",
		"babel-preset-env": "^1.7.0",
		"babel-preset-react": "^6.24.1",
		"codecov": "^3.1.0",
		"compression-webpack-plugin": "^2.0.0",
		"copy-webpack-plugin": "^4.6.0",
		"cross-env": "^5.2.0",
		"css-hot-loader": "^1.4.2",
		"css-loader": "^1.0.1",
		"enzyme": "^3.7.0",
		"enzyme-adapter-react-16": "^1.7.0",
		"eslint": "^5.9.0",
		"eslint-config-airbnb": "^17.1.0",
		"eslint-plugin-import": "^2.14.0",
		"eslint-plugin-jsx-a11y": "^6.1.2",
		"eslint-plugin-react": "^7.11.1",
		"eslint-watch": "^4.0.2",
		"html-loader": "^0.5.5",
		"html-webpack-plugin": "^3.2.0",
		"http-serve": "^1.0.1",
		"jest": "^23.6.0",
		"jest-environment-enzyme": "^7.0.1",
		"jest-enzyme": "^7.0.1",
		"jest-when": "^2.0.0",
		"mini-css-extract-plugin": "^0.4.5",
		"mkdirp": "^0.5.1",
		"node-sass": "^4.10.0",
		"react-test-renderer": "^16.6.3",
		"redux-saga-test-plan": "^3.7.0",
		"redux-test-utils": "^0.3.0",
		"rimraf": "^2.6.2",
		"sass-loader": "^7.1.0",
		"source-list-map": "^2.0.1",
		"style-loader": "^0.23.1",
		"uglify-js": "^3.4.9",
		"url-loader": "^1.1.2",
		"webpack-cli": "^3.1.2",
		"webpack-merge": "^4.1.4"
	},
	"dependencies": {
		"react": "^16.6.3",
		"react-dom": "^16.6.3",
		"redux-saga": "^0.16.2",
		"webpack": "^4.26.1"
	},
	"scripts": {
		"start": "webpack-dev-server --history-api-fallback --config webpack.dev.js",
		"start:docker": "yarn start --host 0.0.0.0",
		"build": "yarn clean && webpack --config webpack.prod.js",
		"build:staging": "yarn clean && webpack --config webpack.staging.js",
		"build:serve": "yarn clean && yarn build && http-serve ./build --gzip -f /",
		"profile": "webpack --watch --profile --json > compilation-stats.json --config webpack.prod.js",
		"clean": "rimraf ./build",
		"lint": "eslint src/",
		"lint:watch": "esw src/ -w",
		"test": "jest",
		"test:watch": "jest --watch --coverage",
		"test:coverage": "jest --coverage",
		"test:ci": "yarn lint && jest --config=\"./config/tests/jest.config.json\" && codecov"
	},
	"engines": {
		"node": ">= 8.9.1",
		"npm": ">= 5.6.0"
	},
	"jest": {
		"moduleNameMapper": {
			"\\.(css|scss)$": "<rootDir>/config/tests/styleMock.js"
		},
		"setupTestFrameworkScriptFile": "./node_modules/jest-enzyme/lib/index.js",
		"testEnvironment": "enzyme",
		"testEnvironmentOptions": {
			"enzymeAdapter": "react16"
		},
		"testPathIgnorePatterns": [
			"/node_modules/",
			"/e2e/"
		],
		"coveragePathIgnorePatterns": [
			"/node_modules/",
			"/config/",
			"/src/index",
			"/src/infrastructure/reducers/index",
			"/src/infrastructure/getStore",
			"/src/infrastructure/icons",
			"/src/infrastructure/initSagas",
			"/src/infrastructure/network",
			"/src/utility/getQuery",
			"/src/utility/history",
			"/e2e/"
		],
		"testURL": "http://localhost/",
		"coverageReporters": [
			"json",
			"html",
			"text"
		]
	},
	"browserslist": [
		"> 0.25%",
		"not dead"
	]
}
