{
	"extends": "airbnb",
	"env": {
		"browser": true
	},
	"rules": {
		"comma-dangle": [
			"error",
			"never"
		],
		"linebreak-style": [
			"error",
			"windows"
		],
		"indent": [
			"error",
			"tab"
		],
		"no-tabs": "off",
		"react/jsx-indent": [
			"error",
			"tab"
		],
		"react/jsx-filename-extension": "off",
		"react/sort-comp": [
			"error",
			{
				"order": [
					"lifecycle",
					"static-methods",
					"everything-else",
					"render"
				]
			}
		],
		"class-methods-use-this": "off"
	}
}
